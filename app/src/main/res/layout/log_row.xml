<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/logMainLnrLoutId">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtvwLogRowNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/colorTxtBlanco"
            android:textStyle="bold"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/txtvwLogRowDateTimeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Date/Time"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textColor="@color/colorTxtBlanco"
            android:paddingBottom="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtvwLogRowPhoneId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:layout_weight="5"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:text="Phone Number"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorTxtBlanco"/>

    <TextView
        android:id="@+id/txtvwLogRowInOutId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:paddingRight="4dp"
        android:text="@string/str_in_out_call"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/colorTxtBlanco"/>


</LinearLayout>